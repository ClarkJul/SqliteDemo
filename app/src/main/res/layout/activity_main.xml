<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#44ff3030"
                android:onClick="createDB"
                android:text="创建数据库" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#44ff3030"
                android:onClick="insertDatas"
                android:text="插入数据" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#44ff3030"
                android:onClick="updateDatas"
                android:text="修改数据" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#44ff3030"
                android:onClick="deleteDatas"
                android:text="删除数据" />

            <Button
                android:id="@+id/btn_insert_api"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#44ff3030"
                android:text="插入数据api" />

            <Button
                android:id="@+id/btn_update_api"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#44ff3030"
                android:text="修改数据api" />

            <Button
                android:id="@+id/btn_delete_api"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#44ff3030"
                android:text="删除数据api" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>